#!/bin/bash

if [ "${DIB_DEBUG_TRACE:-0}" -gt 0 ]; then
    set -x
fi
set -eu
set -o pipefail


[ -n "$TARGET_ROOT" ]

source $_LIB/img-functions

IMAGE_PATH=$(readlink -f $IMAGE_NAME)
cd $TARGET_ROOT

echo "#disabled" > ./tmp/fstab.new
sudo mv ./tmp/fstab.new ./etc/fstab
sudo ln -s ./sbin/init ./

sudo rm ./tmp/ramdisk
PRUNE_PATH='-path ./sys -prune '\
'-o -path ./proc -prune '\
'-o -path "./tmp/*" -prune '\
'-o -path ./boot -prune '
sudo find . $PRUNE_PATH -o -print | sudo cpio -o -H newc | gzip > ${IMAGE_PATH}.initramfs

select_boot_kernel_initrd $TARGET_ROOT
