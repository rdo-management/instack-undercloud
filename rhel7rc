export NODE_DIST=rhel7
export DIB_LOCAL_IMAGE=rhel-guest-image-7.1-20150203.1.x86_64.qcow2
export REG_METHOD=disable

# We need to set RHOS=0 so that epel/rdo get enabled.
export RHOS=0
# But we still actually need it to enable base RHEL repos.
export RHOS_RELEASE=6
export DIB_COMMON_ELEMENTS=rhos-release
export REG_HALT_UNREGISTER=1
export DELOREAN=1
export DELOREAN_REPO="http://104.130.230.24/centos70/05/d8/05d8a6b82bf1f16c064bbee84d95c88b73030fae_3ea5fe35/delorean.repo"

function add_path {
    if [ -d $1 ]; then
        if [ -z "$ELEMENTS_PATH" ]; then
            export ELEMENTS_PATH=$1
        else
            export ELEMENTS_PATH="$ELEMENTS_PATH:$1"
        fi
    fi
}

export ELEMENTS_PATH=
add_path $(pwd)/tripleo-puppet-elements/elements
add_path /usr/share/instack-undercloud
add_path /usr/share/tripleo-image-elements
add_path /usr/share/diskimage-builder/elements

export DIB_INSTALLTYPE_puppet_modules=source
